<%- include('partials/header') %>

<section class="hero">
  <div class="hero-content">
    <h2>Discover Your Next Favorite Story</h2>
    <p>Explore thousands of movies, share your thoughts, and connect with fellow enthusiasts.</p>

    <form class="search-bar" method="GET" action="/movies">
      <input type="text" name="search" placeholder="Search for movies, authors, directors..." required />
      <button type="submit">Search</button>
    </form>
  </div>
</section>

<div class="container">
  <section class="features-section">
    <h2>What You Can Do</h2>
    <div class="feature-grid">
      <div class="feature-card">
        <h3>Explore</h3>
        <p>Browse our library of movies with ratings and reviews from real users.</p>
      </div>
      <div class="feature-card">
        <h3>Review</h3>
        <p>Leave reviews and ratings for titles you've watched.</p>
      </div>
      <div class="feature-card">
        <h3>Track</h3>
        <p>View your rated titles and manage your profile from a personal dashboard.</p>
      </div>
    </div>
  </section>
</div>

<%- include('partials/footer') %>
